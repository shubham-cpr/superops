select * from customer_table

select [First Name],[Last Name] from customer_table

select [First Name],[Last Name] from customer_table where [Last Name]='Kumar'
select [First Name],[Last Name] from customer_table where [First Name]='Shubham' and [Last Name]='Kumar'
select [First Name],[Last Name] from customer_table where [Last Name] like 'Kum%'

select [First Name],[Last Name] from customer_table where Age=30
select [First Name],[Last Name] from customer_table where Age>=25



update customer_table
set age=30
where [First Name] like 'sh%' and [Last Name]='Kumar';

delete customer_table
where [First Name] like 'sh%' and [Last Name]='Kumar';

select * from customer_table
alter table customer_table
add City varchar(50),
    Country varchar(50)

update customer_table
set City='Hyderabad',
    Country='India'

alter table customer_table
add Id int PRIMARY KEY IDENTITY (1,1);

select * from products_table
create table products_table
(
    ProductId int PRIMARY KEY IDENTITY (0001,1),
    ProductName varchar(50),
    Price float
)

